<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Items.ItemBaseFragment">

    <ImageView
        android:id="@+id/itemBaseFragmentImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/itemname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/itemBaseFragmentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/itemname"
        app:layout_constraintEnd_toEndOf="@+id/itemBaseFragmentImage"
        app:layout_constraintStart_toStartOf="@+id/itemBaseFragmentImage"
        app:layout_constraintTop_toBottomOf="@+id/itemBaseFragmentImage" />

</androidx.constraintlayout.widget.ConstraintLayout>